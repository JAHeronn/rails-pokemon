<h1 id="root"><%= link_to "< Pokedex", root_path %></h1>
<span id="training-text">Let's Start Training</span>

<% if @trainers.exists? %>
  <div class="grid">
    <% @trainers.each do |trainer| %>
      <%= render trainer %>
    <% end %>
  </div>
<% else %>
  <p>There are no Pokemons in the Pokedex</p>
<% end %>

<div id="new-trainer">
  <%= link_to "New Trainer", new_trainer_path, class: "btn btn-primary" %>
</div>
